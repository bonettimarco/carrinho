<h1> Nossa loja</h1>

<h2>Total da compra = <%= @soma %></h2>
<%= link_to 'Finalizar compra', carrinhos_path %>

  <div class="table-wrapper table-responsive-xl">
    <table class="table table-striped">
      <thead>
      <th>Produto</th>
      <th>descrição</th>
      <th>preço</th>
      <th class="col-md-2"></th>
      </thead>
      <tbody>
      <% @produtos.each do |produto|%>
        <tr>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td><%= produto.preco %></td>
          <% if false && @carrinho.include?(produto.id) %>
            <td>
              <%= button_to "Retirar do carrinho", remover_do_carrinho_path, method: :delete, params: {id: produto.id} %>
            </td>
          <% else %>
            <td><%= link_to 'Incluir no carrinho', por_no_carrinho_path(produto), method: :post %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
